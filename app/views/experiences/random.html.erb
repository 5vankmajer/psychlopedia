<%- if @experience.present? -%>
  <div>
    <div class="thingo">
      <h1 class="title" title="<%= titleize(@experience.title)-%>">
        <%= truncate_and_titleize(@experience.title) -%>
      </h1>
    </div>
    <h3 class="whoandwhen"><%= t('psychlopedia.misc.by') -%> <%= @experience.pseudonym -%></h3>
    <div class="etxt">
      <%= markdown(truncate(@experience.body, length: 500, omission: ' [...]')) -%>
      <span class="keep_reading"><%= link_to t('experiences.random.keep_reading'), experience_path(@experience) -%></span>
    </div>
  </div>
<%- end -%>
